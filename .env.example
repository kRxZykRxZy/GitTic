# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database: "sqlite" or "postgres"
DB_DRIVER=sqlite
# SQLite path (used when DB_DRIVER=sqlite)
SQLITE_PATH=./data/platform.sqlite
# Postgres connection (used when DB_DRIVER=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=platform
POSTGRES_PASSWORD=secret
POSTGRES_DB=platform

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# Redis (optional, for caching/sessions)
REDIS_URL=redis://localhost:6379

# Git storage
GIT_STORAGE_PATH=./data/repos

# Cluster
CLUSTER_TOKEN=change-me-cluster-token

# AI (Pollinations)
AI_ENABLED=true
AI_RATE_LIMIT_PER_MINUTE=30

# WebSocket
WS_PORT=3001

# CSRF
CSRF_SECRET=change-me-csrf-secret

# Logging
LOG_LEVEL=info
