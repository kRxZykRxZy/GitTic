{
    "name": "gittic",
    "version": "1.0.0",
    "private": true,
    "description": "GitTic - A comprehensive Git hosting platform with CI pipelines, collaborative editor, cluster management, and AI integration",
    "scripts": {
        "build": "pnpm -r run build",
        "start": "pnpm run build && node packages/backend/dist/index.js",
        "test": "pnpm -r run test",
        "lint": "pnpm -r run lint",
        "check:frontend-style-deps": "node scripts/check-frontend-style-deps.mjs",
        "dev": "pnpm -r run dev",
        "clean": "pnpm -r run clean",
        "docker": "docker build -t gittic:latest . && docker run -p 3000:3000 -p 3001:3001 -v \"%cd%/data:/app/data\" gittic:latest",
        "docker:build": "docker build -t gittic:latest .",
        "docker:run": "docker run -p 3000:3000 -p 3001:3001 -v \"%cd%/data:/app/data\" gittic:latest",
        "cluster:start": "pnpm -r run cluster:start",
        "check:shared-src-clean": "node scripts/check-shared-src-generated-files.mjs"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9.0.0"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "@types/nodemailer": "^7.0.10",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "node-cron": "^4.2.1",
        "nodemailer": "^8.0.1",
        "react-markdown": "^10.1.0",
        "react-router-dom": "^7.13.0",
        "react-syntax-highlighter": "^16.1.0",
        "yaml": "^2.8.2"
    },
    "pnpm": {
        "overrides": {
            "tailwindcss": "3.4.19",
            "postcss": "8.5.6",
            "autoprefixer": "10.4.24",
            "@tailwindcss/typography": "0.5.19"
        }
    }
}
