{
  "compilerOptions": {
    "module": "Node16",      // Node ESM
    "target": "ES2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@platform/shared": ["packages/shared/src"],
      "@platform/utils": ["packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
