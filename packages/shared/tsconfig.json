{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM"],
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__",
    "**/*.test.ts",
    "src/**/*.js",
    "src/**/*.js.map",
    "src/**/*.d.ts",
    "src/**/*.d.ts.map"
  ]
}
